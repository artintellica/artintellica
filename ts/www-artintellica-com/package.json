{
  "name": "www-artintellica-com",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:icons": "tsx process-icons.ts",
    "build:blog": "tsx build-blog.ts",
    "build:docker": "cd .. && docker buildx build -f www-artintellica-com/Dockerfile .",
    "dev": "react-router dev --port 4058",
    "build": "cross-env NODE_ENV=production react-router build",
    "start": "cross-env NODE_ENV=production react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "biome lint --write --unsafe",
    "format": "biome format --write",
    "fix": "pnpm run typecheck && pnpm run lint && pnpm run format",
    "deploy": "cd .. && fly deploy --config www-artintellica-com/fly.toml --dockerfile www-artintellica-com/Dockerfile"
  },
  "dependencies": {
    "@react-router/express": "7.6.0",
    "@react-router/fs-routes": "7.6.0",
    "@react-router/node": "7.6.0",
    "@react-router/serve": "7.6.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "cross-env": "^7.0.3",
    "highlight.js": "^11.11.1",
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router": "7.6.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-smartypants": "^3.0.2",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@react-router/dev": "7.6.0",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^10.4.21",
    "feed": "^5.0.1",
    "png-to-ico": "^2.1.8",
    "retext": "^9.0.0",
    "retext-smartypants": "^6.2.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.7",
    "toml": "^3.0.0",
    "vite": "^6.3.5",
    "vite-env-only": "^3.0.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
